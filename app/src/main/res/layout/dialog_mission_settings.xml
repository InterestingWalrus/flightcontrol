<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/TransBlack"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingEnd="1dp"
        android:paddingStart="1dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/waypoint_configuration"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="@string/waypoint_altitude_metres"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="15dp"
            android:textSize="12sp"
            android:text="@string/altitude"></TextView>

        <EditText
            tools:ignore="LabelFor"
            android:id="@+id/altitude_editText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:inputType="number"
            android:importantForAutofill="no"></EditText>

        <CheckBox
            android:id="@+id/task_checkBox"
            android:text="@string/land_waypoint_string"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="@string/sampleTime"></TextView>


        <EditText
            tools:ignore="LabelFor"
            android:id="@+id/sampleTime_editText"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:inputType="number"
            android:importantForAutofill="no"></EditText>

    </LinearLayout>


</LinearLayout>